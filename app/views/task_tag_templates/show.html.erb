<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Task tag #<%= @task_tag.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/task_tags" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/task_tags/<%= @task_tag.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit task tag
        </a>
      </div>

      <div class="col">
        <a href="/delete_task_tag/<%= @task_tag.id %>" class="btn btn-block btn-outline-secondary">
          Delete task tag
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Task
      </dt>
      <dd>
        <% if @task_tag.task.present? %>
          <a href="/tasks/<%= @task_tag.task_id %>">
            <%= @task_tag.task.caption %>
          </a>
        <% end %>
      </dd>

      <dt>
        Tag
      </dt>
      <dd>
        <% if @task_tag.tag.present? %>
          <a href="/tags/<%= @task_tag.tag_id %>">
            <%= @task_tag.tag.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@task_tag.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@task_tag.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

