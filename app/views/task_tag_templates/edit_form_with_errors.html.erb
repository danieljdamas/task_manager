<!-- Validation failure messages -->
<% if @task_tag.errors.any? %>
  <% @task_tag.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit task tag #<%= @task_tag.id %>
</h1>

<hr>

<!-- Form task_tag start -->
<form action="/update_task_tag/<%= @task_tag.id %>" method="post">
<!-- Form task_tag end -->

  <!-- Label and input for task_id start -->
  <div class="form-group">
    <label for="task_id">
      Task
    </label>

    <!-- Input for task_id start -->
    <%= select_tag(:task_id, options_from_collection_for_select(Task.all, :id, :caption, @task_tag.task_id), :class => "form-control") %>
    <!-- Input for task_id end -->
  </div>
  <!-- Label and input for task_id end -->

  <!-- Label and input for tag_id start -->
  <div class="form-group">
    <label for="tag_id">
      Tag
    </label>

    <!-- Input for tag_id start -->
    <input type="text" id="tag_id" name="tag_id" class="form-control" value="<%= @task_tag.tag_id %>">
    <!-- Input for tag_id end -->
  </div>
  <!-- Label and input for tag_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update task tag
  </button>
</form>

<hr>

<a href="/task_tags">
  Go back
</a>
