<% if @task_tag.errors.any? %>
  <% @task_tag.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit task tag #<%= @task_tag.id %>
</h1>

<hr>

<form action="/update_task_tag/<%= @task_tag.id %>" method="post">

  <div class="form-group">
    <label for="task_id">
      Task
    </label>

    <%= select_tag(:task_id, options_from_collection_for_select(Task.all, :id, :caption, @task_tag.task_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="tag_id">
      Tag
    </label>

    <%= select_tag(:tag_id, options_from_collection_for_select(Tag.all, :id, :name, @task_tag.tag_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update task tag
  </button>
</form>

<hr>

<a href="/task_tags">
  Go back
</a>
