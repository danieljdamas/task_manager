<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All task tags
    </h1>

    <a href="/task_tags/new" class="btn btn-block btn-outline-secondary">
      Add a new task tag
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Task
        </th>

        <th>
          Tag
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @task_tags.each do |task_tag| %>
      <tr>
        <!-- Display task_tag.id start -->
        <td>
          <%= task_tag.id %>
        </td>
        <!-- Display task_tag.id end -->

        <!-- Display task_tag.task_id start -->
        <td>
          <%= task_tag.task.caption %>
        </td>
        <!-- Display task_tag.task_id end -->

        <!-- Display task_tag.tag_id start -->
        <td>
          <%= task_tag.tag_id %>
        </td>
        <!-- Display task_tag.tag_id end -->

        <!-- Display task_tag.created_at start -->
        <td>
          <%= time_ago_in_words(task_tag.created_at) %> ago
        </td>
        <!-- Display task_tag.created_at end -->

        <!-- Display task_tag.updated_at start -->
        <td>
          <%= time_ago_in_words(task_tag.updated_at) %> ago
        </td>
        <!-- Display task_tag.updated_at end -->

        <td>
          <a href="/task_tags/<%= task_tag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
