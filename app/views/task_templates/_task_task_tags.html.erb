<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Task Tags

    <a data-toggle="collapse" href="#task_task_tags_new_form">
      Add task tag
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @task.task_tags.each do |task_tag| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/task_tags/<%= task_tag.id %>">
          <%= task_tag.task_id %>
        </a>

        <a href="/delete_task_tag_from_task/<%= task_tag.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="task_task_tags_new_form">
        <%= render partial: "task_templates/task_task_tags_new_form" %>
      </div>
    </div>

  </ul>
</div>
