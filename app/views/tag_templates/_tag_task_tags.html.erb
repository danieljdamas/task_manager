<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Task Tags

    <a data-toggle="collapse" href="#tag_task_tags_new_form">
      Add task tag
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @tag.task_tags.each do |task_tag| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/task_tags/<%= task_tag.id %>">
          <%= task_tag.task_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_task_tag_from_tag/<%= task_tag.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="tag_task_tags_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "tag_templates/tag_task_tags_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
